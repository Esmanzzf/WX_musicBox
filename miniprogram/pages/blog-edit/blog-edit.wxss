/* pages/blog-edit/blog-edit.wxss */
.container {
  padding: 20rpx;
}
/*文本框样式*/
.content {
  width: 100%;
  height: 360rpx;
  box-sizing: border-box;
  padding: 12rpx;
  border: 2rpx dashed #cbd1d7;
  border-radius: 10rpx;
}



/* 图片父样式 */
.image-list {
  display: flex;
  flex-wrap: wrap;/*允许换行*/
  margin-top: 20rpx;
}
/*加号图片以及选中的图片显示出来的样式*/
.image-wrap {
  width: 220rpx;
  height: 220rpx;
  margin: 8rpx;
  position: relative;/*配合弹性盒子实现自动换行*/
  overflow: hidden;
  text-align: center;
}

.image {
  width: 100%;
  height: 100%;
}
/*删除iconfont的样式*/
.icon-shanchu1 {
  position: absolute;
  top: 0;
  right: 0;
  width: 40rpx;
  height: 40rpx;
  background-color: #000;
  opacity: 0.4;
  color: #fff;
  text-align: center;
  line-height: 40rpx;
  font-size: 38rpx;
  font-weight: bolder;
}
/*加号图片父盒子样式*/
.selectphoto {
  border: 2rpx dashed #cbd1d7;
  position: relative;
}
/*加号图片样式*/
.icon-jiahao {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  color: #cbd1d7;
  font-size: 80rpx;
}

.footer {
  display: flex;
  align-items: center;
  position: fixed;/*生成绝对定位的元素，相对于浏览器窗口进行定位。元素的位置通过 "left", "top", "right" 以及 "bottom" 属性进行规定。*/
  bottom: 0;
  padding: 20rpx;
  width: 100%;
  box-sizing: border-box;
  background: #f1f1f1;
}

/*显示文本框字数的样式*/
.words-num {
  flex: 10;
  text-align: right;
  color: #474747;
  font-size: 32rpx;
  padding-right: 30rpx;
}
/*发布按钮的样式*/
.send-btn {
  flex: 1;
  background: #d43c33;
  color: #fff;
  font-size: 24rpx;
  margin-right: 15rpx;
}