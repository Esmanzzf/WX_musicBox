/* components/bottom-modal/bottom-modal.wxss */
.modal {
  position: fixed;
  top: 0;
  right: 0;
  bottom: 0;
  left: 0;
  z-index: 99;
  text-align: center;
  background: rgba(0, 0, 0, 0.6);
}

.panel {
  position: absolute;
  bottom: 0rpx;
  left: 0;
  width: 100%;
  min-height: 300rpx;
  box-sizing: border-box;
  /*padding: 100rpx;*/
  /*border-box时关闭按钮能放在padding区域上不受影响*/
  background-color: #f8f8f8;
}

/* 可以直接对外部样式修改，无需再自己定义一个class名，因为关闭样式隔离 styleIsolation:'apply-shared' */
.modal .icon-shanchu {
  position: absolute;
  right: 10rpx;
  top: 10rpx;
  padding: 20rpx; /* 为了增加点击区域大小 */
}